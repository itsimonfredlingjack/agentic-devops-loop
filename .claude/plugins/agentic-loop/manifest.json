{
  "name": "agentic-loop",
  "version": "1.0.0",
  "description": "Plugin for agentic development loop with Jira integration and self-healing capabilities",
  "enabled": true,
  "mcp": {
    "servers": {
      "jira": {
        "command": "npx",
        "args": ["-y", "@aashari/mcp-server-atlassian-jira"],
        "env": {
          "JIRA_URL": "${JIRA_URL}",
          "JIRA_USERNAME": "${JIRA_USERNAME}",
          "JIRA_API_TOKEN": "${JIRA_API_TOKEN}"
        },
        "tools": {
          "allowed": [
            "jira_get_issue",
            "jira_search",
            "jira_transition_issue",
            "jira_add_comment"
          ]
        }
      }
    }
  },
  "permissions": {
    "jira": {
      "read": ["issues", "projects", "transitions"],
      "write": ["comments", "transitions"],
      "admin": false
    }
  }
}
