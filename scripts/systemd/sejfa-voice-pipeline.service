[Unit]
Description=SEJFA Voice Pipeline (FastAPI on :8000)
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=ai-server2
WorkingDirectory=/home/ai-server2/04-voice-mode-4-loop
Environment=PATH=/home/ai-server2/04-voice-mode-4-loop/agentic-devops-loop/venv/bin:/usr/local/bin:/usr/bin:/bin
EnvironmentFile=/home/ai-server2/04-voice-mode-4-loop/.env
ExecStart=/home/ai-server2/04-voice-mode-4-loop/agentic-devops-loop/venv/bin/uvicorn src.voice_pipeline.main:app --host 0.0.0.0 --port 8000
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=sejfa-voice

[Install]
WantedBy=multi-user.target
